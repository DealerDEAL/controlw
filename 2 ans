class Solution {
    private:
    const int x = 102;
public:
    bool isPalindrome( int x) {
        int arr[3];
        int c = x;
        for(int i=0; i<3; i++){
            c=c%10;
            arr[i]=c;
        }
        if(arr[0]==arr[2]){
            return true;
        }
        if(arr[0]!=arr[2])
        return false; 
        
    }
};
